<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/titleColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="LoginTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeMain" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bodyColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/bg_search_bar</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableStart">@mipmap/icon_search_32</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:padding">1dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/edit_hint_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:hint">搜索标题</item>
    </style>



    <style name="DialogAnimations" />
    <style name="DialogAnimations.SmileWindow">
        <item name="@android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

</resources>
