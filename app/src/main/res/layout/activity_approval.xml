<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--标题-->
    <RelativeLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/titleColor"
        android:id="@+id/top">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_approval_back"
            android:background="@mipmap/icon_back"/>

        <View
            android:layout_width="1dip"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="50dp"
            android:background="@color/line"
            android:layout_gravity="center_vertical|center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:id="@+id/tv_back"
            android:text="我审批的"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>



        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="@string/app_name"-->
        <!--android:textSize="@dimen/title_text_size"-->
        <!--android:textColor="@color/colorPrimaryDark"-->
        <!--android:gravity="center_vertical"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true" />-->

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/top"
        android:id="@+id/top_line"
        android:background="@color/line">
    </View>

    <LinearLayout
        android:id="@+id/top2"
        android:layout_below="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/titleColor"
        >

        <RadioGroup
            android:id="@+id/rg_approval_menu"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/tv_approval_noApproval"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center_horizontal|center"
                android:paddingTop="2dp"
                android:text="待我审批的"
                android:textSize="16sp"
                android:textColor="@color/tab_selector_btn_color" />

            <RadioButton
                android:id="@+id/tv_approval_hasApproval"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center_horizontal|center"
                android:paddingTop="2dp"
                android:text="我已审批的"
                android:textSize="16sp"
                android:textColor="@color/tab_selector_btn_color" />
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/top2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top3"
        android:background="@color/titleColor"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/scrollbar"
            android:background="#1296DB"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"/>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top3"
        android:id="@+id/v_approval_view1"
        android:background="@color/line">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/v_approval_view1"
        android:layout_height="48dp"
        android:id="@+id/layout2"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_approval_search"
            android:gravity="center|center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/icon_search"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:text="搜索"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_approval_select"
            android:layout_weight="1"
            android:gravity="center|center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/icon_filter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:text="筛选"/>
        </RelativeLayout>
       
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/layout2"
        android:id="@+id/view1"
        android:layout_height="1dp"
        android:background="@color/line">
    </View>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1"
        android:id="@+id/lv_approval_item"
        android:background="@color/white">


    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1"
        android:visibility="gone"
        android:id="@+id/loader"
        android:gravity="center_horizontal">

        <!--<com.tuyenmonkey.mkloader.MKLoader-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:mk_type="Whirlpool"-->
            <!--app:mk_color="#E5E5E5" />-->
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/info_tip"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/v_approval_view1"
        android:background="@android:color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/rl1"
            android:background="@color/titleColor">

            <EditText
                android:layout_weight="9"
                android:id="@+id/et_approval_search"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                style="@style/StyleEditText" />
            <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_approval_cancel"
                android:background="@null"
                android:textColor="@color/buttonblue"
                android:layout_alignParentRight="true"
                android:textSize="13dp"
                android:text="取消"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/rl1"
            android:layout_height="1dp"
            android:background="@color/line">
        </View>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv_approval_select"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_below="@+id/top3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:background="@mipmap/icon_circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.app.officeautomationapp.view.MyGridView
                    android:id="@+id/gv_approval_select"
                    android:focusable="false"
                    android:listSelector="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="2"
                    android:columnWidth="20dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_approval_select_do"
        android:visibility="gone"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/buttonblue"
        android:layout_alignParentBottom="true"/>

</RelativeLayout >